<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="491.0" prefWidth="744.0"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ClientGUI.ClientUIController">

    <children>

        <Label fx:id="reservationActionsLabel" layoutX="40.0" layoutY="10.0" text="Reservation Actions" />

        <Button fx:id="newReservationButton"
                layoutX="40.0" layoutY="32.0"
                mnemonicParsing="false"
                text="New Reservation"
                onAction="#onNewReservationClicked" />

        <Label layoutX="40.0" layoutY="74.0" text="Reservation ID" />

        <TextField fx:id="reservationIdInput"
                   layoutX="40.0" layoutY="100.0"
                   promptText="Enter ID" />

        <Label fx:id="reservationIdLabel"
               layoutX="250.0" layoutY="74.0"
               text="-" />

        <Button fx:id="showReservation"
                layoutX="40.0" layoutY="137.0"
                mnemonicParsing="false"
                text="Show Reservation"
                onAction="#onShowReservationClicked" />

        <Label layoutX="40.0" layoutY="193.0" text="Date (yyyy-MM-dd)" />
        <TextField fx:id="reservationDateField"
                   layoutX="40.0" layoutY="216.0"
                   prefWidth="130.0" />

        <Label layoutX="190.0" layoutY="193.0" text="Time (HH:mm:ss)" />
        <TextField fx:id="reservationTimeField"
                   layoutX="190.0" layoutY="216.0"
                   prefWidth="130.0" />

        <Label layoutX="340.0" layoutY="193.0" text="Number Of Guests" />
        <TextField fx:id="numberOfGuestsField"
                   layoutX="340.0" layoutY="216.0"
                   prefWidth="80.0" />

        <Button fx:id="update"
                layoutX="461.0" layoutY="216.0"
                mnemonicParsing="false"
                text="Update"
                onAction="#onUpdateReservationClicked" />

        <Button fx:id="cancelReservation"
                layoutX="540.0" layoutY="216.0"
                mnemonicParsing="false"
                text="Cancel Reservation"
                style="-fx-text-fill: white; -fx-background-color: #d9534f; -fx-padding: 5;"
                onAction="#onCancelReservationClicked" />

        <TextArea fx:id="reservationDetailsTextArea"
                  layoutX="40.0" layoutY="282.0"
                  prefHeight="150.0" prefWidth="667.0" />

        <Button fx:id="exit"
                layoutX="672.0"
                layoutY="440.0"
                mnemonicParsing="false"
                text="Exit"
                onAction="#onExitClicked" />

    </children>
</Pane>