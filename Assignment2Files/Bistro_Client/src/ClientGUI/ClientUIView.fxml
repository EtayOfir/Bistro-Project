<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="491.0" prefWidth="744.0"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ClientGUI.ClientUIController">

    <children>

        <Label layoutX="40.0" layoutY="38.0" text="Reservation ID" />

        <TextField fx:id="reservationIdInput"
                   layoutX="40.0" layoutY="64.0"
                   promptText="Enter ID" />

        <Label fx:id="reservationIdLabel"
               layoutX="250.0" layoutY="38.0"
               text="-" />

        <Button fx:id="showReservation"
                layoutX="40.0" layoutY="101.0"
                mnemonicParsing="false"
                text="Show Reservation"
                onAction="#onShowReservationClicked" />

        <Label layoutX="40.0" layoutY="157.0" text="Date (yyyy-MM-dd)" />
        <TextField fx:id="reservationDateField"
                   layoutX="40.0" layoutY="180.0"
                   prefWidth="130.0" />

        <Label layoutX="190.0" layoutY="157.0" text="Time (HH:mm:ss)" />
        <TextField fx:id="reservationTimeField"
                   layoutX="190.0" layoutY="180.0"
                   prefWidth="130.0" />

        <Label layoutX="340.0" layoutY="157.0" text="Number Of Guests" />
        <TextField fx:id="numberOfGuestsField"
                   layoutX="340.0" layoutY="180.0"
                   prefWidth="80.0" />

        <Button fx:id="update"
                layoutX="461.0" layoutY="180.0"
                mnemonicParsing="false"
                text="Update"
                onAction="#onUpdateReservationClicked" />

        <TextArea fx:id="reservationDetailsTextArea"
                  layoutX="40.0" layoutY="246.0"
                  prefHeight="180.0" prefWidth="667.0" />

        <Button fx:id="exit"
                layoutX="672.0"
                layoutY="444.0"
                mnemonicParsing="false"
                text="Exit"
                onAction="#onExitClicked" />

    </children>
</Pane>