<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="900.0" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ClientGUI.controller.RepresentativeViewDetailsUIController">
   <children>
      <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Representative View Details Dashboard" />
      
      <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <tabs>
          <Tab text="Waiting List">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0">
                     <children>
                        <TableView fx:id="waitingListTable" layoutX="14.0" layoutY="14.0" prefHeight="400.0" prefWidth="850.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                          <columns>
                            <TableColumn fx:id="colWaitID" prefWidth="50.0" text="ID" />
                            <TableColumn fx:id="colWaitContact" prefWidth="200.0" text="Contact Info" />
                            <TableColumn fx:id="colWaitDiners" prefWidth="75.0" text="Diners" />
                            <TableColumn fx:id="colWaitStatus" prefWidth="100.0" text="Status" />
                            <TableColumn fx:id="colWaitTime" prefWidth="150.0" text="Entry Time" />
                          </columns>
                        </TableView>
                     </children>
              </AnchorPane>
            </content>
          </Tab>
          
          <Tab text="Active Reservations">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0">
                     <children>
                        <TableView fx:id="reservationsTable" prefHeight="400.0" prefWidth="850.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                          <columns>
                            <TableColumn fx:id="colResID" prefWidth="131.0" text="Reservations ID" />
                            <TableColumn fx:id="colResType" prefWidth="120.0" text="Role" />
                            <TableColumn fx:id="colResDate" prefWidth="91.0" text="Date" />
                            <TableColumn fx:id="colResTime" prefWidth="94.0" text="Time" />
                            <TableColumn fx:id="colResDiners" prefWidth="82.0" text="Diners" />
                            <TableColumn fx:id="colResStatus" prefWidth="86.0" text="Status" />
                          </columns>
                        </TableView>
                     </children>
              </AnchorPane>
            </content>
          </Tab>
            
          <Tab text="Subscribers Details">
             <content>
                <AnchorPane minHeight="0.0" minWidth="0.0">
                   <children>
                      <TableView fx:id="subscribersTable" prefHeight="400.0" prefWidth="850.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                        <columns>
                          <TableColumn fx:id="colSubID" prefWidth="50.0" text="ID" />
                          <TableColumn fx:id="colSubName" prefWidth="150.0" text="Full Name" />
                          <TableColumn fx:id="colSubPhone" prefWidth="120.0" text="Phone" />
                          <TableColumn fx:id="colSubEmail" prefWidth="180.0" text="Email" />
                          <TableColumn fx:id="colSubUser" prefWidth="100.0" text="Username" />
                        </columns>
                      </TableView>
                   </children>
                </AnchorPane>
             </content>
          </Tab>
        </tabs>
      </TabPane>
      
      <HBox alignment="CENTER_RIGHT" spacing="15.0">
         <children>
            <Button fx:id="btnBack" mnemonicParsing="false" onAction="#getBackBtn" prefWidth="80.0" text="Back" />
            <Button fx:id="btnExit" mnemonicParsing="false" onAction="#getExitBtn" prefWidth="80.0" text="Exit" />
         </children>
      </HBox>
      
   </children>
</VBox>
