<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<VBox alignment="TOP_CENTER" maxWidth="500.0" prefHeight="300.0" prefWidth="450.0" spacing="20" 
      style="-fx-background-color: white; -fx-background-radius: 14; -fx-border-color: #e6e6e6; -fx-border-radius: 14; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.12), 18, 0, 0, 6);" 
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="ClientGUI.controller.ServerSettingsUIController">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2563eb;" text="Server Connection Settings" />

    <VBox spacing="15">
        <Label style="-fx-font-size: 12; -fx-text-fill: #6b7280;" 
               text="Configure the server connection details below:" 
               wrapText="true" />
        
        <GridPane hgap="15" vgap="15">
            <columnConstraints>
                <ColumnConstraints percentWidth="30" />
                <ColumnConstraints percentWidth="70" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
            
            <Label style="-fx-font-weight: bold;" text="Host:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="hostField" promptText="localhost or IP address" 
                       style="-fx-border-color: #d1d5db; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8;" 
                       GridPane.columnIndex="1" GridPane.rowIndex="0" />
            
            <Label style="-fx-font-weight: bold;" text="Port:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="portField" promptText="5555" 
                       style="-fx-border-color: #d1d5db; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8;" 
                       GridPane.columnIndex="1" GridPane.rowIndex="1" />
        </GridPane>
        
        <Label fx:id="statusLabel" style="-fx-text-fill: #ef4444; -fx-font-size: 12;" 
               text="" wrapText="true" />
    </VBox>

    <HBox alignment="CENTER" spacing="15">
        <Button onAction="#onContinueClicked" 
                style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 30; -fx-font-weight: bold;" 
                text="Connect" />
        <Button onAction="#onCancelClicked" 
                style="-fx-background-color: #e5e7eb; -fx-text-fill: #374151; -fx-background-radius: 8; -fx-padding: 10 30;" 
                text="Cancel" />
    </HBox>
</VBox>
